:host {
  -webkit-box-sizing: border-box;
  box-sizing: border-box; }

:host([disabled]) {
  pointer-events: none; }

button {
  min-height: 10%;
  font-family: "Open Sans", "Helvetica Neue", Arial, Helvetica, sans-serif;
  cursor: pointer;
  border: none;
  background-color: #4571c4;
  color: #ffffff;
  line-height: 20px;
  font-size: 14px;
  padding: 4px 12px;
  border-radius: 3px; }
  button:hover {
    background-color: #315db0; }
  button:active {
    background-color: #2b529c; }
  button:disabled {
    opacity: 0.4; }
    button:disabled.accent {
      background-color: #c75943; }
      button:disabled.accent:hover {
        background-color: #a83a24; }
      button:disabled.accent:active {
        background-color: #7e2c1b; }
    button:disabled.light {
      background-color: #f0f1f2;
      color: rgba(0, 0, 0, 0.7); }
      button:disabled.light:hover {
        background-color: #e2e3e4; }
      button:disabled.light:active {
        background-color: #c8cacb; }
    button:disabled.round {
      border-radius: 50px; }
    button:disabled.small {
      padding: 2px 8px;
      font-size: 12px; }
    button:disabled.large {
      padding: 8px 20px;
      font-size: 16px; }